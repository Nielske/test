<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/golfplaceCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/golfCourseImageView"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_alignParentTop="true"
                android:id="@+id/golfCourseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="test" />

            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_below="@id/golfCourseTitle"
                android:id="@+id/golfCourseAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="test" />

            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_below="@id/golfCourseAddress"
                android:id="@+id/golfCoursePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="test" />
            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_below="@id/golfCoursePhone"
                android:id="@+id/golfCourseEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="test" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>